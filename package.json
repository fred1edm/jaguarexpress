{
  "name": "jaguar-express-monorepo",
  "version": "1.0.0",
  "description": "Monorepo para el ecosistema completo de Jaguar Express",
  "private": true,
  "type": "module",

  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run --recursive build",
    "lint": "pnpm run --recursive lint",
    "test": "pnpm run --recursive test",
    "clean": "pnpm run --recursive clean",
    "client:dev": "pnpm --filter jaguar-express dev",
    "backend:dev": "pnpm --filter jaguar-express-backend dev",
    "admin:dev": "pnpm --filter jaguar-express-admin dev",
    "webview:dev": "pnpm --filter jaguar-express-webview dev",
    "db:generate": "pnpm --filter jaguar-express-backend db:generate",
    "db:push": "pnpm --filter jaguar-express-backend db:push",
    "db:migrate": "pnpm --filter jaguar-express-backend db:migrate",
    "db:studio": "pnpm --filter jaguar-express-backend db:studio",
    "db:seed": "pnpm --filter jaguar-express-backend db:seed",
    "setup": "pnpm install && pnpm run db:generate && pnpm run db:push"
  },
  "devDependencies": {
    "@types/node": "^22.15.30",
    "concurrently": "^9.2.0",
    "typescript": "~5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "keywords": [
    "delivery",
    "food",
    "express",
    "monorepo",
    "nextjs",
    "fastify",
    "react",
    "flutter"
  ],
  "author": "Jaguar Express Team",
  "license": "MIT"
}
